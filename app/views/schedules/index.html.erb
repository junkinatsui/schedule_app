<h3>予定一覧</h3>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>



<p><%= link_to "新規追加", :new_schedule %></p>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
        <tr>
          <td><%= schedule.id %></td>
          <td><%= schedule.title %></td>
          <td><%= schedule.start_date %></td>
          <td><%= schedule.end_date %></td>
          <td><%= schedule.all_day %></td>
          <td><%= schedule.updated.at %></td>
          <td><%= schedule.created.at %></td>
          #更新と新規を合わせる
        <tr>
    <% end %>
  </tbody>
</table>

<p>予定合計</p>
<% #予定の合計を表示 %>
<p>本日の日付</p>
<% #本日の日付を表示 %>
